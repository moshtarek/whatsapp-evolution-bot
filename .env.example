# ===== Evolution API =====
EVOLUTION_BASE_URL=http://192.168.0.77:8080
EVOLUTION_INSTANCE=bnimalik
EVOLUTION_API_KEY=replace-with-your-api-key

# digits | jid
EVOLUTION_NUMBER_FORMAT=jid

# 1 لو تستخدم HTTPS بشهادة ذاتية (self-signed)
EVOLUTION_TLS_INSECURE=0

# ===== Bot Server =====
BOT_PORT=3001
BOT_PUBLIC_URL=http://192.168.0.77:3001

# اختياري: تحقق بسيط للويبهوك
# WEBHOOK_SECRET=change-me

# ===== Business Hours =====
WORK_START_HOUR=9
WORK_END_HOUR=17
WORK_DAYS=0,1,2,3,4   # 0=Mon ... 6=Sun

# ===== Logging =====
LOG_LEVEL=info

# ===== Database =====
SQLITE_PATH=./db/bot.sqlite

# تجاهل الرد على رسائل fromMe لتفادي اللوب (غيّرها إلى 0 لو تبغى يرد)
IGNORE_FROM_ME=1
